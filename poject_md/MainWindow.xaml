<Window x:Class="poject_md.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:poject_md"
        mc:Ignorable="d"
        Title="Продукты" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image Source="/Комфорт.png" HorizontalAlignment="Left" Width="50" Height="50" VerticalAlignment="Center"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Click="Add_Click" Content="Добавить запись"/>
                <Button x:Name="card" Click="Card_Click" Content="Карты для продукции"/>
                <Button Click="Price_Click" Content="Расчет доплаты за сложность"/>

                <!--<Button Click="Delete_Click" Content="Удалить запись"/>-->
            </StackPanel>
        </Grid>

        <ListView HorizontalContentAlignment="Stretch" Grid.Row="1" Grid.RowSpan="4" Grid.ColumnSpan="2" x:Name="listView" MouseDoubleClick="listView_MouseDoubleClick">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Margin="10" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="{Binding Product_type.name_product_type, StringFormat={}{0} | }" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left"/>
                            <TextBlock Text="{Binding name_product, StringFormat={}{0}}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left"/>
                            <TextBlock Text="{Binding TimeModule}" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Right"/>
                            <TextBlock Text="{Binding articul, StringFormat={}Артикуль: {0}}" Grid.Row="2" Grid.ColumnSpan="3"/>
                            <TextBlock Text="{Binding min_cost_seller, StringFormat={}Минимальная стоимость: {0}}" Grid.Row="3" Grid.ColumnSpan="3"/>
                            <TextBlock Text="{Binding Material_type.name_material_type,StringFormat={}Основной материал: {0}}" Grid.Row="4" Grid.ColumnSpan="3"/>

                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
