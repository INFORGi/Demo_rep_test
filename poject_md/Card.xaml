<Window x:Class="poject_md.Card"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:poject_md"
        mc:Ignorable="d"
        Title="Route Map" Height="450" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dataGrid" Grid.Row="0" ItemsSource="{Binding WorkshopData}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Тип цеха" Binding="{Binding Workshops.name_workshop}" Width="*"/>
                <DataGridTextColumn Header="Количество человек" Binding="{Binding Workshops.count_people}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Label Name="totalPeople" Grid.Row="1" Content="{Binding TotalPersonnel, StringFormat='Всего человек: {0}'}" 
               HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
    </Grid>
</Window>