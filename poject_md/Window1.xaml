<Window x:Class="poject_md.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:poject_md"
        mc:Ignorable="d"
        Title="" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Наименование" Grid.Column="0" Grid.Row="0"/>
        <TextBlock Text="Артикул" Grid.Column="0" Grid.Row="1"/>
        <TextBlock Text="Тип продукта" Grid.Column="0" Grid.Row="2"/>
        <TextBlock Text="Минимальная стоимость" Grid.Column="0" Grid.Row="3"/>
        <TextBlock Text="Основной материал" Grid.Column="0" Grid.Row="4"/>

        <TextBox x:Name="name" Text="{Binding name_product}" Grid.Column="1" Grid.Row="0"/>
        <TextBox x:Name="articul" Text="{Binding articul}" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="min_cost" Text="{Binding min_cost_seller}" Grid.Column="1" Grid.Row="3"/>

        <ComboBox Name="typeProduct" 
          Grid.Column="1" Grid.Row="2" 
          ItemsSource="{Binding Path=ProductTypes}" 
          DisplayMemberPath="name_product_type" 
          SelectedItem="{Binding Product_type}" />

        <ComboBox Name="typeMaterial" 
          Grid.Column="1" Grid.Row="4" 
          ItemsSource="{Binding Path=MaterialTypes}" 
          DisplayMemberPath="name_material_type" 
          SelectedItem="{Binding Material_type}" />


        <Button Click="Save_Click" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" Content="Сохранить" />
    </Grid>
</Window>
